{
  "name": "plebbit",
  "version": "0.1.2",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "dependencies": {
    "@chakra-ui/icons": "1.1.1",
    "@chakra-ui/react": "1.7.4",
    "@emotion/react": "11.7.1",
    "@emotion/styled": "11.6.0",
    "@plebbit/plebbit-react-hooks": "https://github.com/plebbit/plebbit-react-hooks.git",
    "@sweetalert/with-react": "0.1.1",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@uiw/react-markdown-editor": "3.2.7",
    "draft-js": "0.11.7",
    "draftjs-to-markdown": "0.6.0",
    "electron-is": "3.0.0",
    "framer-motion": "5.6.0",
    "moment": "2.29.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-draft-wysiwyg": "1.14.7",
    "react-icons": "4.3.1",
    "react-infinite-scroll-component": "6.1.0",
    "react-moment": "1.1.1",
    "react-router-dom": "5.3.0",
    "react-scripts": "5.0.0",
    "react-select": "5.3.1",
    "styled-components": "5.3.3",
    "sweetalert2": "11.4.10",
    "web-vitals": "2.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env PUBLIC_URL=./ react-scripts build",
    "netLify-build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:start": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build:linux": "electron-builder build --publish never -l",
    "electron:build:windows": "electron-builder build --publish never -w",
    "electron:build:mac": "electron-builder build --publish never -m"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "chrome >= 67",
      "edge >= 79",
      "firefox >= 68",
      "opera >= 54",
      "safari >= 14"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "plebbit.desktop",
    "productName": "plebbit",
    "beforePack": "electron/beforePack.js",
    "afterAllArtifactBuild": "electron/afterAllArtifactBuild.js",
    "extraResources": [
      {
        "from": "bin/${os}",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extends": null,
    "mac": {
      "target": "dmg",
      "category": "public.app-category.social-networking",
      "type": "distribution"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "linux": {
      "target": "AppImage",
      "category": "Network"
    }
  },
  "lint": "eslint .",
  "lint:fix": "eslint --fix",
  "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
  "devDependencies": {
    "concurrently": "7.0.0",
    "cross-env": "7.0.3",
    "decompress": "4.2.1",
    "electron": "19.0.1",
    "electron-builder": "23.0.9",
    "eslint": "8.8.0",
    "eslint-config-node": "4.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.30.0",
    "mock-require": "3.0.3",
    "prettier": "2.5.1",
    "wait-on": "6.0.1",
    "yarn": "1.22.18"
  }
}
